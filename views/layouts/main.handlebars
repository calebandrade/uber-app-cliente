<html lang="es">
  <head>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    {{! tailwind }}
    <link href="/output.css" rel="stylesheet" />
    {{! tailwind }}
    <meta charset="UTF-8" />
    {{#if mapa}}
      {{! mapbox }}
      <script
        src="https://api.mapbox.com/mapbox-gl-js/v2.7.0/mapbox-gl.js"
      ></script>
      <link
        href="https://api.mapbox.com/mapbox-gl-js/v2.7.0/mapbox-gl.css"
        rel="stylesheet"
      />

      {{! mapbox }}
    {{/if}}

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{titulo}}</title>
  </head>
  <body class="dark:text-white dark:bg-[#222]">
    <nav
      class="sticky top-0 dark:bg-black px-6 py-4 shadow-md flex items-center justify-between bg-white h-[10vh]"
    >
      <div class="flex flex-row items-center">

        <a class="link" href="/">Uber</a>

      </div>

    </nav>

    {{#if username}}
      <p class="peer absolute top-7 right-5 flex flex-row">
        <span>
          {{username}}

        </span>

        <img src="{{perfil}}" alt="" class="ml-1 w-7 rounded-md" />
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19 9l-7 7-7-7"
          ></path>
        </svg>
      </p>
      <div
        style="transition: all 1s;"
        class="flex flex-col items-center justify-center hover:right-0 shadow-md rounded-md h-[50vh] w-80 z-50 -right-full peer-hover:right-0 bg-white p-4 absolute top-20"
      >
        <a href="/perfil" class="link-black">Perfil</a>
        {{#if cliente}}
          <a href="/mapa" class="link-black">Mapa</a>
        {{else}}
          <a href="/coches" class="link-black">Coche</a>
        {{/if}}
        <a href="/viajes" class="link-black">Viajes</a>
        <a href="/logout" class="btn-primary">Cerrar Session</a>
      </div>
    {{/if}}
    <div>

      {{{body}}}

    </div>
  </body>
</html>