<form
  class="center flex flex-col gap-2 w-1/5 shadow p-6 rounded-md dark:bg-white dark:text-black"
  action="https://formsubmit.co/olmanmartinez99@gmail.com"
  method="post"
>
  <h1 class="text-3xl mb-4 text-center">Ayuda</h1>

  <input
    value="{{usuario.nombre}}"
    hidden
    placeholder="Nombre"
    type="text"
    name="nombre"
    class="input"
  />
  <input type="phone" name="telefono" value="{{usuario.telefono}}" hidden />
  <input value="{{usuario.correo}}" hidden type="email" name="correo" />
  <label for="mensaje">Mensaje</label>
  <textarea
    class="input"
    placeholder="Escriba aqui..."
    id="mensaje"
    name="mensaje"
  ></textarea>
  <button class="btn-primary">Enviar Mensaje</button>
  <a href="/" class="link-2">Intentar Mas tarde</a>
</form>